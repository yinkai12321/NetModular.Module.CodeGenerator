<#@ template language="C#" #>
<#@ import namespace="NetModular.Lib.Utils.Core.Extensions" #>
<template>
  <<#= _uiPrefix #>-form-dialog ref="form" v-bind="form" v-on="on" :visible.sync="visible_">
    <el-row>
      <el-col :span="20" :offset="1">
<#    foreach(var p in _class.AddModelPropertyList){ #>
        <el-form-item label="<#= p.Remarks #>：" prop="<#= p.CamelName #>">
          <el-input v-model="form.model.<#= p.CamelName #>" clearable/>
        </el-form-item>
<#    } #>
      </el-col>
    </el-row>
  </<#= _uiPrefix #>-form-dialog>
</template>
<script>
import { mixins } from '<#= _prefix.ToLower() #>-ui'

const api = $api.<#= _model.Project.Code.FirstCharToLower() #>.<#= _class.Name.FirstCharToLower() #>

export default {
  mixins: [mixins.dialog],
  data () {
    return {
      form: {
        title: '添加<#= _class.Remarks #>',
        icon: 'add',
        action: api.add,
        model: {
<#    for(var i = 0;i < _class.AddModelPropertyList.Count;i++){ var p=_class.AddModelPropertyList[i]; #>
          /** <#= p.Remarks #> */
          <#= p.CamelName #>: ''<#=i < _class.AddModelPropertyList.Count-1 ? "," : "" #>
<#    } #>
        },
        rules: {
        }
      },
      on: {
        success: this.onSuccess,
        open: this.onOpen
      }
    }
  },
  methods: {
    onSuccess () {
      this.$emit('success')
    },
    onOpen () {
      this.$nextTick(() => {
        this.$refs.form.reset()
      })
    }
  }
}
</script>
